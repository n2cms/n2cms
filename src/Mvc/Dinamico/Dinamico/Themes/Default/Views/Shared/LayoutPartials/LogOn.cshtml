@if(Request.IsAuthenticated) 
{
	<a href="@Url.Action("LogOff", "Membership")">@Content.Translate["Log off"] <strong>@Context.User.Identity.Name</strong></a>
}
else
{
	@Html.ActionLink(Content.Translate.Text("Log on"), "LogOn", new { controller = "Membership", returnUrl = Request["returnUrl"] ?? (Content.Current.IsEmpty ? Content.Traverse.StartPage.Url : Content.Current.Page.Url) })
}

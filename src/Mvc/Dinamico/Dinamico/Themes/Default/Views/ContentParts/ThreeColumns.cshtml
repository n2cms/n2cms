@model Dinamico.Models.ContentPart

@{ Content.Define(re =>
	   {
		   re.Title = "3 Columns";
		   re.CheckBox("Separator", "Show separator");
	   });
}
<div class="columns threecolumns clearfix @((bool)(Content.Data.Separator ?? false) ? "separator" : "")">
	<div class="column column1">
		@{ Html.DroppableZone("Left").Render(); }
	</div>
	<div class="column column2">
		@{ Html.DroppableZone("Center").Render(); }
	</div>
	<div class="column column3">
		@{ Html.DroppableZone("Right").Render(); }
	</div>
</div>
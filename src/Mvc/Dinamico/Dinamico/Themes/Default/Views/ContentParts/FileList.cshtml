@model Dinamico.Models.ContentPart

@{

	Content.Define(ie =>
	{
		ie.Title = "File Downloads List";
		ie.IconUrl = "{IconsUrl}/disk.png";
		ie.FolderSelection("Directory").Required();
		ie.Text("FileFilter", "File Filter").DefaultValue("?*.*");
		ie.CheckBox("Recursive");
		ie.CheckBox("ReverseOrder").DefaultValue(false);
	});

	string filter = (string)Model.GetDetail("FileFilter") ?? "*";
	string dir = (string)Model.GetDetail("Directory") ?? "";
	
	string[] fileList = new string[0];
	try
	{
		if (Content.Data.Recursive == true)
		{
			fileList = (N2.Utility.RecursiveListFiles(Server.MapPath(dir), filter) as IEnumerable<string>).ToArray();
		}
		else
		{
			fileList = System.IO.Directory.GetFiles(Server.MapPath(dir), filter);
		}
	}
	catch (Exception x)
	{ 
		<div class="alert alert-error"><pre>@x.ToString()</pre></div>
	}

	string baseDir = System.Web.Hosting.HostingEnvironment.MapPath("/").TrimEnd('/', '\\');
	var data = (from f in fileList
				let fn = new FileInfo(f)
				where !String.Equals("Thumbs.db", fn.Name, StringComparison.OrdinalIgnoreCase)
				&& !fn.Name.StartsWith(".")
				&& f.Length > baseDir.Length + dir.Length + 1
				orderby f
				select new {
					FileSize = N2.Utility.GetFileSizeString(fn.Length, true), 
					Url = f.Substring(baseDir.Length),
					DisplayName = f.Substring(baseDir.Length + dir.Length + 1)});

	if (Model.GetDetail("ReverseOrder", false)) {
		data = data.Reverse();
	}
					
}

<table class="table table-striped">
	<thead>
		<tr>
			<th>File name</th>
			<th>Size</th>
			<th>Download</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var d in data){
		<tr>
			<td><a href="@d.Url">@d.DisplayName</a></td>
			<td>@d.FileSize</td>
			<td><a href="@d.Url"><img border="0" src="/N2/Resources/Icons/Disk.png" /></a></td>
		</tr>}
	</tbody>
</table>
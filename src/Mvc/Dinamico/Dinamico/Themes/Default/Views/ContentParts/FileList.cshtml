@using System.Diagnostics
@model Dinamico.Models.ContentPart

@* ReSharper disable UnknownCssClass *@
@* ReSharper disable Html.PathError *@
@{

	Content.Define(ie =>
	{
		ie.Title = "File Downloads List";
		ie.IconUrl = "{IconsUrl}/disk.png";
		ie.FolderSelection("Directory").Required();
		ie.Text("FileFilter", "File Filter").DefaultValue("?*.*");
		ie.CheckBox("Recursive");
		ie.CheckBox("ReverseOrder").DefaultValue(false);

		ie.FieldSet("Viewer", "Document Viewer", f =>
		{
			f.CheckBox(N2.Web.DocViewerUtility.UseDocViewerPropertyKey, "Override site view/download settings").DefaultValue(false);
			f.Text(N2.Web.DocViewerUtility.DocViewerUrlPropertyKey, "Document viewer URL").DefaultValue("");
		});
		
	});



	var filter = Model.GetDetail("FileFilter", "*");
	var dir = Model.GetDetail("Directory", "");
	var fileList = new string[] {};
	try { fileList = N2.Utility.ListFiles(Server.MapPath(dir), filter, Model.GetDetail("Recursive", false)).ToArray(); }
	catch (Exception x) {  <div class="alert alert-error"><pre>@x.ToString()</pre></div> }

	@* ReSharper disable PossibleNullReferenceException *@
	var baseDir = System.Web.Hosting.HostingEnvironment.MapPath("/").TrimEnd('/', '\\');
	@* ReSharper restore PossibleNullReferenceException *@
	@* ReSharper disable ImplicitlyCapturedClosure *@
	var data = (from f in fileList
				let fn = new FileInfo(f)
				where !String.Equals("Thumbs.db", fn.Name, StringComparison.OrdinalIgnoreCase) //TODO: Use the config value.
					  && !fn.Name.StartsWith(".")
					  && f.Length > baseDir.Length + dir.Length + 1
				orderby f
				select new
				{
					FileSize = N2.Utility.GetFileSizeString(fn.Length, true),
					Url = N2.Web.DocViewerUtility.GetDocumentUrl(Model, f.Substring(baseDir.Length).Replace('\\', '/').Replace("//", "/")),
					DisplayName = f.Substring(baseDir.Length + dir.Length + 1)
				});
	@* ReSharper restore ImplicitlyCapturedClosure *@

	if (Model.GetDetail("ReverseOrder", false)) {
		data = data.Reverse();
	}
					
}
<table class="table table-striped">
	<thead>
		<tr>
			<th>File name</th>
			<th>Size</th>
			<th>Download</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var d in data){
		<tr>
			<td><a href="@d.Url">@d.DisplayName</a></td>
			<td>@d.FileSize</td>
			@* ReSharper disable Html.Obsolete *@
			<td><a href="@d.Url"><img alt="Download" border="0" src="/n2/resources/icons/disk.png" /></a></td>
			@* ReSharper restore Html.Obsolete *@
		</tr>}
	</tbody>
</table>
@* ReSharper restore Html.PathError *@
@* ReSharper restore UnknownCssClass *@

@model Dinamico.Models.ContentPart
@using N2.Web.Mvc.Html

@{
	Content.Define(ie =>
		{
			ie.Title = "Sign-in Form";
			ie.IconUrl = "{IconsUrl}/key.png";
			ie.Text("Title");
			ie.Url("Redirect", "Redirect URL");
			ie.CheckBox("ForceRedirect", "Force redirect even if a returnUrl is available.");
		}
	);

	bool showError = false;

	if (Request.Form["action"] == "sign-in")
	{
		var userName = Request.Form["userName"];
		var password = Request.Form["password"];
		var remember = Request.Form["remember"] == "true";

		if (Membership.ValidateUser(userName, password) || FormsAuthentication.Authenticate(userName, password))
		{
			FormsAuthentication.SetAuthCookie(userName, remember);
			if (Model.GetDetail("ForceRedirect", false) == true && Content.Has.Redirect) { Response.Redirect(Content.Data.Redirect); }
			else if (!string.IsNullOrEmpty(Request["returnUrl"])) { Response.Redirect(Request["returnUrl"]); }
			else if (Content.Has.Redirect) { Response.Redirect(Content.Data.Redirect); }
			else { Response.Redirect(Request.RawUrl); <script type="text/javascript">location.replace(location.href);</script> }
		}
		else { showError = true; }

	}
	else if (Request.Form["action"] == "sign-out")
	{ 
		FormsAuthentication.SignOut();
		showError = false;
		string logoutUrl = System.Configuration.ConfigurationManager.AppSettings["N2.logout.url"];
		if (!string.IsNullOrEmpty(Request["returnUrl"])) { Response.Redirect(Request["returnUrl"]); }
		else if (!string.IsNullOrEmpty(logoutUrl)) { Response.Redirect(logoutUrl); }
	}
}

@if (showError)
{
	<div class="alert alert-error">Incorrect username or password.</div>
}
	
<form action="@Request.RawUrl" method="post">
	@if (User.Identity.IsAuthenticated)
	{
		Html.DroppableZone("RestrictedAbove").Render();
		<input type="hidden" name="action" value="sign-out" />
		<button type="submit" class="btn">Sign out</button>
		Html.DroppableZone("RestrictedBelow").Render();
	}
	else
	{ 
	<input type="hidden" name="action" value="sign-in" />
	<fieldset>
		@if (!String.IsNullOrEmpty(Model.Title))
		{ <legend>@Model.Title</legend> }

		<div class="control-group">
			<label class="control-label" for="inputEmail">Username</label>
			<div class="controls">
				<input type="text" id="inputEmail" name="username" placeholder="Username">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="inputPassword">Password</label>
			<div class="controls">
				<input type="password" id="inputPassword" name="password" placeholder="Password">
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<label class="checkbox">
					<input type="checkbox" value="true" name="remember">
					Remember me
				</label>
				<button type="submit" class="btn">Sign in</button>
			</div>
		</div>
	</fieldset>
	}
</form>